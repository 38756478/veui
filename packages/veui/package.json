{
  "name": "veui",
  "version": "0.2.0",
  "description": "Baidu Enterprise UI for Vue.js.",
  "author": "ecomfe",
  "scripts": {
    "dev": "node build/dev-server.js",
    "build": "node build/build.js",
    "icons": "node build/svg2json.js && node build/icons.js",
    "svg2json": "node build/svg2json.js",
    "unit": "cross-env BABEL_ENV=test karma start test/unit/karma.conf.js --single-run",
    "test": "npm run unit",
    "lint": "eslint --ext .js,.vue src test/unit/specs",
    "prepublish": "npm run build && cp -r ./src/* .",
    "publish": "rm -rf ./components ./directives ./managers ./mixins ./styles ./plugins ./utils ./index.js ./icons.js"
  },
  "module": "index.js",
  "dependencies": {
    "lodash": "^4.17.4",
    "tether": "^1.4.0",
    "vue-awesome": "^2.2.1"
  },
  "peerDependencies": {
    "vue": "^2.2.2"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
